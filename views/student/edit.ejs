<%- include("../partials/header") %>

<div class="container">
	<h2>
		<%=std.name%>
	</h2>
	<form action="/std/<%=std._id%>?_method=PUT" method="POST">
		<div class="form-group">
    		<label for="fnameEdit">Father's Name</label>
    		<input type="text" name="std[fathername]" class="form-control" id="fnameEdit" value="<%=std.fathername%>">
  		</div>
		<div class="form-group">
    		<label for="RollEdit">Roll No</label>
    		<input type="text" name="std[rollno]" class="form-control" id="RollEdit" value="<%=std.rollno%>">
  		</div>
		<div class="form-group">
    		<label for="mobileEdit">Mobile No.</label>
    		<input type="text" name="std[mobileNum]" class="form-control" id="mobileEdit" value="<%=std.mobileNum%>">
  		</div>
		<input type='Submit' class="btn btn-primary">
	</form>
</div>

<%- include("../partials/footer") %>