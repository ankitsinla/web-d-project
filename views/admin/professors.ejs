<%- include("../partials/header") %>

<div class="jumbotron " style="text-align:center">
		<h1><%=currentUser.username%></h1>
	<a href="/admin"><button class="btn btn-secondary">Home</button></a>	
</div>

<div class="container">
	<div class="row"  style="margin:auto;">
		<div class="col-lg-12">
			<h1 class="text-center display-4 my-4">Professors</h1>
	<hr>
	<table class="table" style="width:90%;margin:auto;text-align:center">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Name</th>
				<th scope="col">College Id</th>
				<th scope="col">Subject</th>
				<th scope="col">Lectures</th>
				<th scope="col">Assignments</th>
				<th scope="col">More Info</th>
			</tr>
		</thead>
		<tbody>
			<% Profs.forEach(function(prof){ %>
				<tr>
					<td><%= prof.name %></td>
					<td><%= prof.collegeId %></td>
					<td><%= prof.subject %></td>
					<td><%= prof.totalClasses %></td>
					<td><%= prof.assignments.length %></td>
					<td><a href="/admin/profinfo/<%=prof._id%>"><button class="btn btn-info ">More Info</button></a></td>
				</tr>
			<% }) %>
		</tbody>
	</table>
			<hr style="height:2px;border-width:0;color:gray;background-color:gray">
		</div>
	</div>
</div>

<%- include("../partials/footer") %>