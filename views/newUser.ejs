<%- include("partials/header") %>

<div class="container">
	<div class="jumbotron " style="text-align:center">
		<h1 class="text-center">Add New <%=newuser%></h1>
		<a href="/admin"><button class="btn btn-secondary">Home</button></a>
	</div>
<% if(newuser== 'student'){%>
	<form  action="/admin/<%=newuser%>/new" method="POST">
	  <div class="form-row">
		<div class="form-group col-md-6">
		  <label for="userid">CollegeId</label>
		  <input type="text" class="form-control" id="userid" name="users[collegeId]]">
		</div>
		<div class="form-group col-md-6">
		  <label for="Password">Password</label>
		  <input type="text" class="form-control" id="Password" name="password">
		</div>
	  </div>
		<div class="form-row">
			  <div class="form-group col-md-6">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="users[name]">
			  </div>
			  <div class="form-group col-md-6">
				<label for="fathername">Father's Name</label>
				<input type="text" class="form-control" id="fathername" name="users[fathername]">
			  </div>
		</div>
	  <div class="form-row">
		<div class="form-group col-md-6">
		  <label for="rollno">Roll No.</label>
		  <input type="text" class="form-control" id="rollno" name="users[rollno]">
		</div>
		<div class="form-group col-md-6">
		  <label for="mobileNum">Mobile No.</label>
		  <input type="text" class="form-control" id="mobileNum" name="users[mobileNum]">
		</div>
	  </div>
	  <button type="submit" class="btn btn-primary">Create User</button>
	</form>
<% }else{ %>
	<form  action="/admin/<%=newuser%>/new" method="POST">
	  <div class="form-row">
		<div class="form-group col-md-6">
		  <label for="userid">CollegeId</label>
		  <input type="text" class="form-control" id="userid" name="users[collegeId]">
		</div>
		<div class="form-group col-md-6">
		  <label for="Password">Password</label>
		  <input type="text" class="form-control" id="Password" name="password">
		</div>
	  </div>
		<div class="form-row">
			  <div class="form-group col-md-6">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="users[name]">
			  </div>
			  <div class="form-group col-md-6">
				<label for="subject">Subject</label>
				<input type="text" class="form-control" id="subject" name="users[subject]">
			  </div>
		</div>
	  <div class="form-row">
		<div class="form-group col-md-6">
		  <label for="email">email</label>
		  <input type="email" class="form-control" id="email" name="users[email]">
		</div>
		<div class="form-group col-md-6">
		  <label for="mobileNum">Mobile No.</label>
		  <input type="text" class="form-control" id="mobileNum" name="users[mobileNum]">
		</div>
	  </div>
	  <button type="submit" class="btn btn-primary">Create User</button>
	</form>
<% } %>
<%- include("partials/footer") %>